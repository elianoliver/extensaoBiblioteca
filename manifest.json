{
  "manifest_version": 3,
  "name": "Minimal Manifest",
  "version": "1.0.0",
  "description": "A basic example extension with only required keys",
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "cookies",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}